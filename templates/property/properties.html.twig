{% extends 'base.html.twig' %}

{% block title %}Properties{% endblock %}

{% block content %}

<div class="page-heading header-text">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <span class="breadcrumb"><a href="#">Home</a> / Properties</span>
          <h3>Properties</h3>
        </div>
      </div>
    </div>
  </div>

  <div class="section properties">
    <div class="container">
      <ul class="properties-filter">
        <li>
          <a class="is_active" href="#!" data-filter="*">Show All</a>
        </li>
        <li>
          <a href="#!" data-filter=".adv">Apartment</a>
        </li>
        <li>
          <a href="#!" data-filter=".str">Villa House</a>
        </li>
        <li>
          <a href="#!" data-filter=".rac">Penthouse</a>
        </li>
      </ul>
      <div class="row properties-box">
        {% for property in properties %}
              <div class="col-lg-4 col-md-6 align-self-center mb-30 properties-items col-md-6">
                <div class="item">
                    <a href="{{ path('property_details', { 'id' : property.id } ) }}"><img src="assets/images/property-01.jpg" alt=""></a>
                    <span class="category">{{ property.type }}</span>
                    <h6>{{ property.price }}$</h6>
                    <h4><a href="{{ path('property_details', { 'id' : property.id } ) }}">{{ property.address }}</a></h4>
                    <ul>
                    <li>Bedrooms: <span>{{ property.bedroomNumber }}</span></li>
                    <li>Bathrooms: <span>{{ property.bathroomNumber }}</span></li>
                    <li>Area: <span>{{ property.surface }} mÂ²</span></li>
                    <li>Floor: <span>{{ property.floorNumber }}</span></li>
                    <li>
                      {% if property.parkingAvailable > 0 %}
                        Parking: <span>{{ property.parkingAvailable }} spot(s)</span>
                      {% else %}
                        No parking.
                      {% endif %}
                    </li>
                    </ul>
                    <div class="main-button">
                    <a href="{{ path('property_details', { 'id' : property.id } ) }}">Schedule a visit</a>
                    </div>
                </div>
              </div>
              {% endfor %}
      </div>
        
      <div class="row">
        <div class="col-lg-12">
          <ul class="pagination">
            <li><a href="#">1</a></li>
            <li><a class="is_active" href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">>></a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

{% endblock %}